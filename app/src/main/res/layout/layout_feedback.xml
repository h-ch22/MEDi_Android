<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:weightSum = "5"
    android:background = "#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight = "1"
        android:orientation="vertical">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src = "@drawable/ic_promote"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "여러분의 의견을 들려주세요."
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:fontFamily="@font/maplestory_light"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_weight = "2"
        android:orientation = "horizontal">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background = "@drawable/btn_rounded_shape_white"
            android:orientation="vertical">

            <ImageButton
                android:id = "@+id/btn_good"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background = "#00000000"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:padding = "20dp"
                android:src = "@drawable/selector_btn_good"/>

            <TextView
                android:id = "@+id/txt_good"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text = "칭찬해요"
                android:textColor="#6e6e6e"
                android:fontFamily="@font/maplestory_light"
                android:layout_gravity="center"
                android:textSize="30sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:background = "@drawable/btn_rounded_shape_white"
            android:orientation="vertical">

            <ImageButton
                android:id = "@+id/btn_bad"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background = "#00000000"
                android:scaleType="fitXY"
                android:padding = "20dp"
                android:layout_gravity="center"
                android:src = "@drawable/selector_btn_bad"/>

            <TextView
                android:id = "@+id/txt_bad"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text = "개선해주세요"
                android:textColor="#6e6e6e"
                android:fontFamily="@font/maplestory_light"
                android:layout_gravity="center"
                android:textSize="30sp"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight = "2"
        android:orientation="vertical">

        <EditText
            android:id = "@+id/feedbackField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint = "여러분의 의견을 입력해주세요."
            android:fontFamily="@font/maplestory_light"
            android:textColor = "#6e6e6e"
            android:textColorHint="#6e6e6e"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="20dp"/>

        <Button
            android:id = "@+id/btn_sendFeedback"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop = "20dp"
            android:background="#00000000"
            android:text = "피드백 보내기"
            android:drawableEnd="@drawable/arrow_feedback"
            android:drawablePadding="10dp"
            android:paddingEnd="10dp"
            android:paddingStart = "10dp"
            android:textSize="20sp"
            android:fontFamily="@font/maplestory_light"
            android:textColor="#6987ff"/>

    </LinearLayout>


</LinearLayout>